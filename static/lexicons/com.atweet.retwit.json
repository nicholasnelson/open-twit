{
  "lexicon": 1,
  "id": "com.atweet.retwit",
  "defs": {
    "main": {
      "type": "record",
      "description": "References an existing twit for resharing",
      "key": "retwit",
      "record": {
        "type": "object",
        "properties": {
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp when the retwit occurred"
          },
          "subject": {
            "type": "object",
            "description": "Original twit being reshared",
            "properties": {
              "uri": {
                "type": "string",
                "format": "at-uri"
              },
              "cid": {
                "type": "string"
              }
            },
            "required": [
              "uri",
              "cid"
            ],
            "additionalProperties": false
          }
        },
        "required": [
          "createdAt",
          "subject"
        ],
        "additionalProperties": false
      }
    }
  }
}
